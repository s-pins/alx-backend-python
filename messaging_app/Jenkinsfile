pipeline {
    agent {
        docker {
            image 'python:3.9-slim-buster'
            args '-u root'
        }
    }
    environment {
        // Set Python environment variables
        PIP_CACHE_DIR = "${WORKSPACE}/.pip-cache"
        PYTHONUNBUFFERED = '1'
        DJANGO_SETTINGS_MODULE = 'messaging_app.settings'
        // Docker Hub credentials and repository name
        DOCKER_HUB_CREDENTIALS_ID = 'docker-hub-credentials' // Jenkins credentials ID for Docker Hub
        DOCKER_HUB_USERNAME = 'your_docker_hub_username' // Replace with your Docker Hub username
        DOCKER_HUB_REPO = 'your_docker_hub_repo' // Replace with your Docker Hub repository name
    }
    stages {
        stage('Checkout') {
            steps {
                echo 'Cloning the repository...'
                git branch: 'main', credentialsId: 'github-credentials', url: 'https://github.com/alx-backend-python/messaging_app.git'
            }
        }
        stage('Prepare Environment') {
            steps {
                echo 'Preparing Python environment and installing dependencies...'
                sh 'python -m venv venv'
                sh '. venv/bin/activate && pip install --no-cache-dir -r requirements.txt'
            }
        }
        stage('Run Tests') {
            steps {
                echo 'Running pytest tests...'
                sh '. venv/bin/activate && pytest --junitxml=test-results.xml'
            }
        }
        stage('Archive Test Reports') {
            steps {
                echo 'Archiving test reports...'
                junit 'test-results.xml'
            }
        }
        stage('Build Docker Image') {
            steps {
                echo 'Building Docker image...'
                script {
                    def appImage = docker.build("${DOCKER_HUB_USERNAME}/${DOCKER_HUB_REPO}:${env.BUILD_NUMBER}")
                    appImage.tag("${DOCKER_HUB_USERNAME}/${DOCKER_HUB_REPO}:latest")
                }
            }
        }
        stage('Push Docker Image') {
            steps {
                echo 'Pushing Docker image to Docker Hub...'
                script {
                    withCredentials([usernamePassword(credentialsId: env.DOCKER_HUB_CREDENTIALS_ID, usernameVariable: 'DOCKER_USERNAME', passwordVariable: 'DOCKER_PASSWORD')]) {
                        sh "echo \$DOCKER_PASSWORD | docker login -u \$DOCKER_USERNAME --password-stdin"
                        sh "docker push ${DOCKER_HUB_USERNAME}/${DOCKER_HUB_REPO}:${env.BUILD_NUMBER}"
                        sh "docker push ${DOCKER_HUB_USERNAME}/${DOCKER_HUB_REPO}:latest"
                    }
                }
            }
        }
    }
    post {
        always {
            echo 'Pipeline finished.'
            // Clean up workspace to save disk space
            deleteDir()
        }
        failure {
            echo 'Pipeline failed. Check logs for details.'
        }
    }
}
